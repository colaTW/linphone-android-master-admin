<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202127">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/buttun2_a"/>

        <ImageButton
            android:id="@+id/memberdata"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:enabled="false"
            android:src="@drawable/b9_b"
            android:scaleType="centerInside"
            android:background="#262A2F"
            android:layout_marginBottom="15dp"/>

        <ImageButton
            android:id="@+id/dooracess"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="#262A2F"
            android:scaleType="centerInside"
            android:src="@drawable/b10_a" />

        <ImageButton
            android:id="@+id/approvedList"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/b11_a"
            android:scaleType="centerInside"
            android:background="#262A2F"
            android:layout_marginBottom="15dp"/>
        <ImageButton
            android:id="@+id/AccessCard"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/b12_a"
            android:scaleType="centerInside"
            android:background="#262A2F"
            android:layout_marginBottom="15dp"
            />
        <ImageButton
            android:id="@+id/Longtime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/b12_a"
            android:scaleType="centerInside"
            android:background="#262A2F"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/returnback"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/b12_a"
                android:scaleType="centerInside"
                android:text="返回上一頁"
                />
            <Button
                android:id="@+id/gomain"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/b12_a"
                android:scaleType="centerInside"
                android:text="回到主畫面"
                />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:overScrollMode="always"
        android:background="#2B2D35"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bt21"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="類別:"
                android:textColor="@color/white_color"
                />

            <Spinner
                android:popupBackground="@color/black_color"
                android:id="@+id/groupLv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部門:"
                android:textColor="@color/white_color"
                />
            <Spinner
                android:popupBackground="@color/black_color"
                android:id="@+id/groupLv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="@color/white_color"
                />

            <EditText

                android:id="@+id/Editname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="電話:"
                android:textColor="@color/white_color"
                />
            <EditText
                android:id="@+id/Editphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                />
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="發卡類型:"
            android:textColor="@color/white_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/cardtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                        <RadioButton
                            android:id="@+id/phoneApp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color" />
                        <RadioButton
                            android:id="@+id/QRcode"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color" />
                        <RadioButton
                            android:id="@+id/card"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bt16"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bt18"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bt17"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

            </LinearLayout>




        </LinearLayout>
        <ProgressBar
            android:id="@+id/sendspiner"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sendButton" />
        <LinearLayout
            android:id="@+id/cardlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡號:"
                android:textColor="@color/white_color"
                />
            <EditText
                android:id="@+id/cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/sendButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bt19"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="#2B2D35"
        android:orientation="vertical"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bt22"
            android:layout_marginBottom="10dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/bt23"
                android:scaleType="centerInside" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Spinner
                    android:id="@+id/select_type"
                    android:popupBackground="@color/black_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
                <EditText
                    android:textColor="@color/white_color"
                    android:id="@+id/select_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/select"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bt20" />
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/bt24"
                android:scaleType="centerInside" />

            <ExpandableListView
                android:id="@+id/grouplist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent" >
            </ExpandableListView>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>


</LinearLayout>
