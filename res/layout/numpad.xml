<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_border"
    >

    <TableRow
        android:layout_weight="1"
        android:gravity="center">

        <org.linphone.views.Digit
            android:id="@+id/Digit1"
            style="@style/DialerDigit"
            android:background="@drawable/n1"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="1" />

        <org.linphone.views.Digit
            android:id="@+id/Digit2"
            style="@style/DialerDigit"
            android:background="@drawable/n2"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="2" />

        <org.linphone.views.Digit
            android:id="@+id/Digit3"
            style="@style/DialerDigit"
            android:background="@drawable/n3"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="3" />

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:gravity="center">

        <org.linphone.views.Digit
            android:id="@+id/Digit4"
            style="@style/DialerDigit"
            android:background="@drawable/n4"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="4" />

        <org.linphone.views.Digit
            android:id="@+id/Digit5"
            style="@style/DialerDigit"
            android:background="@drawable/n5"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="5" />

        <org.linphone.views.Digit
            android:id="@+id/Digit6"
            style="@style/DialerDigit"
            android:background="@drawable/n6"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="6" />

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:gravity="center">

        <org.linphone.views.Digit
            android:id="@+id/Digit7"
            style="@style/DialerDigit"
            android:background="@drawable/n7"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="7" />

        <org.linphone.views.Digit
            android:id="@+id/Digit8"
            style="@style/DialerDigit"
            android:background="@drawable/n8"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="8" />

        <org.linphone.views.Digit
            android:id="@+id/Digit9"
            style="@style/DialerDigit"
            android:background="@drawable/n9"
            android:soundEffectsEnabled="true"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:text="9" />

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:gravity="center">

        <org.linphone.views.Digit
            android:id="@+id/DigitStar"
            style="@style/DialerDigit"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/mi"
            android:soundEffectsEnabled="true"
            android:text="*"
           />

        <org.linphone.views.Digit
            android:id="@+id/Digit00"
            style="@style/DialerDigit"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/n0"
            android:soundEffectsEnabled="true"
            android:text="0+" />

        <org.linphone.views.EraseButton
            android:id="@+id/erase"
            style="@style/DialerDigit"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/b002" />

    </TableRow>

</TableLayout>
