<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:stretchColumns="*"
            android:layout_marginRight="5dp">

            <TableRow>
                <ImageButton
                    android:id="@+id/B_BA"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:src="@drawable/buttun1_a"
                    android:background="#262A2F"
                    android:scaleType="centerInside"/>
                <ImageButton
                    android:id="@+id/B_door"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:src="@drawable/buttun2_b"
                    android:background="#262A2F"
                    android:clickable="false"
                    android:scaleType="centerInside"/>

                <ImageButton
                    android:id="@+id/B_call"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:src="@drawable/buttun3_a"
                    android:background="#262A2F"
                    android:scaleType="centerInside"/>
                <ImageButton
                    android:id="@+id/B_Guard"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:src="@drawable/buttun5_a"
                    android:background="#262A2F"
                    android:scaleType="centerInside"/>


            </TableRow>


        </TableLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202127">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#2B2D35"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="選擇暫定門禁設備"
                android:textColor="@color/white_color"
                android:textSize="20dp"
                />


            <ExpandableListView
                android:id="@+id/flooorlistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent"></ExpandableListView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#2B2D35"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="選取暫停門禁時間"
                android:textColor="@color/white_color"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="right">

                <ListView
                    android:id="@+id/timelist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:childDivider="#80FF0000"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:text="確認門禁暫停時間" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#2B2D35"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已暫停門禁設定"
                    android:textColor="@color/white_color"
                    android:textSize="20dp"
                    />


                <ListView
                    android:id="@+id/longtimelist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:childDivider="#80FF0000"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:text="取消已暫停門禁" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>





</LinearLayout>
</LinearLayout>
